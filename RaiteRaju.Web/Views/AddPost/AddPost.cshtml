    function fnAddPost() {

        //var  = $('.dvEditExhibition');
        //var  = projectDialog.find('.txtProjectName').val();
        //var  = projectDialog.find('.txtProjectDescription').val();
        //var  = projectDialog.find('.btnBrowseProjectImage').val();

