<div id="AdList">

    <table id="tblUserList" style="border-collapse: collapse;">
        <tr id="adlistHeader">
            <th width="50px">ID</th>
            <th width="100px">Name</th>
            <th width="300px">Phone Number </th>
            <th width="400px">Address</th>
